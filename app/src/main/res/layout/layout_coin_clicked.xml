<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/coin_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bitcoin" />

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Coin Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_image" />

    <TextView
        android:id="@+id/total_mine_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_name" />

    <TextView
        android:id="@+id/mined_Coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Btc"
        app:layout_constraintBottom_toBottomOf="@+id/total_mine_coin"
        app:layout_constraintStart_toEndOf="@+id/total_mine_coin"
        app:layout_constraintTop_toTopOf="@+id/total_mine_coin"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="Value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_mine_coin" />

    <TextView
        android:id="@+id/coin_value"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="152dp"
        android:text="0000000"
        app:layout_constraintBottom_toBottomOf="@+id/Value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Value"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/coin_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="Amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Value" />

    <TextView
        android:id="@+id/coin_mined_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="0000000"
        app:layout_constraintBottom_toBottomOf="@+id/coin_amount"
        app:layout_constraintStart_toEndOf="@+id/coin_amount"
        app:layout_constraintTop_toTopOf="@+id/coin_amount"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>